<div id="garage-img-div">
<%= render :partial => "shared/navbar" %>

<div>
  <center><h1 style="color:red">Bike set ups</h1></center>
  <div class="col-lg-7">
    <center><h2>Modification</h2></center>
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th><center>Post</center></th>
            <th>Posted by</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @garages.each do |g| %>
              <tr>
                <td><%= g.title.capitalize %></td>
                <td><%= g.user.first_name.capitalize %> <%= g.user.last_name.capitalize %></td>
                <td><a href="/garagedetails/<%= g.id %>">Detail.</a></td>
              </tr>
        <% end %>
        </tbody>
      </table>
     </div> 
  </div>
  
  <div class="eventList">
    <div class="col-lg-4 pull-right">
      <center>
      <h3>Create a Posted</h3>
        <form action="/garages" method="post" enctype="multipart/form-data">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          <input type="hidden" name='garage[user_id]' value="<%= session[:user_id] %>">
          <div class="form-group">
            <label>Title</label>
            <input name="garage[title]" type="text" class="form-control">
          </div>
          <div class="form-group">
            <label>Description</label>
            <textarea name="garage[content]" class="form-control" rows="7"></textarea>
          </div>
          <div class="form-group">
            <label>File input</label>
            <input type="file" name="garage[picture]">
            <p class="help-block">Upload your picture</p>
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
      </center>
    </div>
  </div>

</div>


